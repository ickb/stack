{
  "private": true,
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest run",
    "test:cov": "vitest run --coverage",
    "build:prepare": "pnpm -r --filter !. install",
    "build": "pnpm -r --filter !./apps/** build",
    "build:all": "pnpm -r build",
    "lint": "pnpm -r lint",
    "clean": "rm -fr dist && pnpm -r clean",
    "clean:deep": "rm -fr dist node_modules pnpm-lock.yaml && pnpm -r clean:deep",
    "revamp": "pnpm clean:deep && pnpm -r up && pnpm build && pnpm lint",
    "sync:template": "pnpm -r  --filter !./apps/** --filter !./packages/utils -c exec 'for f in .npmignore tsconfig.json typedoc.json vitest.config.mts; do cp ../utils/$f .; done'",
    "change": "pnpm changeset",
    "version": "pnpm changeset version",
    "publish": "pnpm publish -r",
    "docs": "typedoc"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.37.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typedoc": "0.28.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.15.1"
}