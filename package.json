{
  "private": true,
  "scripts": {
    "ccc:setup": "bash ccc/setup.sh --record releases/next releases/udt",
    "build": "pnpm -r --filter !./apps/** --filter !./ccc/.cache/** build",
    "build:all": "pnpm -r --filter !./ccc/.cache/** build",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:cov": "vitest run --coverage",
    "lint": "pnpm -r lint",
    "clean": "rm -fr dist && pnpm -r clean",
    "clean:deep": "rm -fr dist node_modules pnpm-lock.yaml && pnpm -r clean:deep",
    "revamp": "pnpm clean:deep && pnpm -r up && pnpm build:all && pnpm lint",
    "sync:template": "pnpm -r --filter !./apps/interface --filter !./packages/utils --filter !. -c exec 'for f in .npmignore tsconfig.json typedoc.json vitest.config.mts; do cp ../../packages/utils/$f .; done'",
    "change": "pnpm changeset",
    "version": "pnpm changeset version",
    "publish": "pnpm publish -r",
    "docs": "typedoc"
  },
  "engines": {
    "node": ">=24"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^2.1.42",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.39.2",
    "get-shit-done-cc": "^1.18.0",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typedoc": "0.28.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
